{% extends "layout.html.twig" %}
{% set current = '' %}
{% block page_title %}
    Inscription
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block content %}

    <h2 class="title_profil">Bonjour {{ user.firstName }} {{ user.nom }}</h2>
<div class="row mt-4">
    <div class="col">
        <p class="date" id="date"></p>
    </div>
    <div class="col">
        <p>Vous Ãªtes inscrits depuis  {{ user.inscriptionDate | date('d/m/Y') }}  </p>
    </div>
</div>

    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">

            <div class="col">

        {{ form_start(form, {attr:{novalidate: 'novalidate' }}) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.nom) }}
            </div>
            <div class="col">
                {{ form_row(form.first_name) }}
            </div>
        </div>

        {{ form_row(form.email) }}

        <div class="row">
            <div class="col">
                {{ form_row(form.password) }}
            </div>
            <div class="col">
                {{ form_row(form.confirm_password) }}
            </div>
        </div>
        {{ form_row(form.address) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.city) }}
            </div>
            <div class="col">
                {{ form_row(form.zip_code) }}
            </div>
        </div>
        {{ form_row(form.submit, {'attr': {'class': 'submitt'}}) }}
        {{ form_end(form) }}
    </div>

        </div> <!-- Fin de la div raw -->
{% endblock %}

