{% extends "layout.html.twig" %}
{% set current = '' %}
{% block page_title %}
    Inscription
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block final_javascripts %}

{% endblock %}

{% block content %}
    <div class="container">
        <div class="row flex_forms" style="display: inline-block">
            <div class="col-xs-8 col-xs-push-2">
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <h3>S'inscrire</h3>
                {{ form_start(form, {attr:{novalidate: 'novalidate' }}) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.first_name) }}
                    </div>
                </div>

                    {{ form_row(form.email) }}

                <div class="row">
                    <div class="col">
                        {{ form_row(form.password) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.confirm_password) }}
                    </div>
                </div>
                {{ form_row(form.address) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.zip_code) }}
                    </div>
                </div>
                {{ form_row(form.submit, {'attr': {'class': 'submitt'}}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

