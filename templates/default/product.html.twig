{% extends "layout.html.twig" %}

{% block content %}
    <div class="container">
<div class="row">

    <div class="col-md-8 col-sm-12">
        {% for product in products %}


        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{ asset('images/product/' ~ product.picture) }}" alt="{{ product.title }}">
            <div class="card-body">
                <h5 class="card-title">{{ product.title }}</h5>
                <p class="card-text">{{ product.description | slice(0, 100) | raw }}...</p>
                <a href="#" class="btn btn-primary">Ajouter au panier</a>
            </div>
        </div>





        {% endfor %}
    </div>
    </div>
</div>
{% endblock %}

