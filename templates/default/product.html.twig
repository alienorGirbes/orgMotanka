{% extends "layout.html.twig" %}
        {% block page_title %}

        {% endblock %}


{% block content %}
    <div class="container cont_product">
        <div class="row">
        {% for product in products %}
             <div class="col-md-4 col-sm-12 cardProd">
                    <div class="card">
                        <img class="card-img-top" src="{{ asset('images/product/' ~ product.picture) }}"
                             alt="{{ product.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.title }}</h5>
                            <p class="card-text">{{ product.description | slice(0, 100) | raw }}...</p>
                            <a href="#" class="btn btn-default">Voir le detail</a>
                        </div>
                    </div>
                </div>
        {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

